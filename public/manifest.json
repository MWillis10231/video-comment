{
  "name": "Video Comments",
  "short_name": "Video Comments",
  "version": "2.0.0",
  "description": "To assist in recording video comments",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "manifest_version": 3,
  "action": {
    "default_title": "Click to open panel"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "sidePanel",
    "tabs"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}